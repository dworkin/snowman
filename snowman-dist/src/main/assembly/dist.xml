<assembly>
  <includeBaseDirectory>false</includeBaseDirectory>
  <formats>
    <format>zip</format>
  </formats>
  
  <dependencySets>

    <!-- Include the common transitive dependencies -->
    <dependencySet>
      <excludes>
	<exclude>com.projectdarkstar.example.projectsnowman:snowman-server:jar</exclude>
	<exclude>com.projectdarkstar.example.projectsnowman:snowman-client-simulator:jar</exclude>
	<exclude>com.projectdarkstar.example.projectsnowman:snowman-world-editor:jar</exclude>
	<exclude>*:zip</exclude>
      </excludes>
      <outputDirectory>snowman-dist/lib</outputDirectory>
      <useProjectArtifact>false</useProjectArtifact>
    </dependencySet>

    <!-- Include the main artifacts -->
    <dependencySet>
      <includes>
	<include>com.projectdarkstar.example.projectsnowman:snowman-server:jar</include>
	<include>com.projectdarkstar.example.projectsnowman:snowman-client:jar</include>
	<include>com.projectdarkstar.example.projectsnowman:snowman-client-simulator:jar</include>
	<include>com.projectdarkstar.example.projectsnowman:snowman-world-editor:jar</include>
      </includes>
      <outputDirectory>snowman-dist</outputDirectory>
      <useProjectArtifact>false</useProjectArtifact>
      <outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
    </dependencySet>

  </dependencySets>



  <fileSets>
    <!-- Include the build and README files -->
    <fileSet>
      <directory>src/main/etc</directory>
      <outputDirectory>snowman-dist</outputDirectory>
    </fileSet>

    <!-- Include all of the Berkeley DB binaries except for the Windows
	 DLL -->
    <fileSet>
      <directory>${project.build.directory}/bdb-${bdb.version}</directory>
      <outputDirectory>snowman-dist/natives/bdb</outputDirectory>
      <excludes>
	<exclude>win32-x86/libdb_java45.dll</exclude>
      </excludes>
    </fileSet>

    <!-- Include the Windows DLL from the Berkeley DB binaries, and make
	 it executable -->
    <fileSet>
      <directory>${project.build.directory}/bdb-${bdb.version}</directory>
      <outputDirectory>natives/bdb</outputDirectory>
      <includes>
	<include>win32-x86/libdb_java45.dll</include>
      </includes>
      <fileMode>755</fileMode>
    </fileSet>

    <!-- Include all of the LWJGL binaries -->
    <fileSet>
      <directory>${project.build.directory}/lwjgl-binaries</directory>
      <outputDirectory>snowman-dist/natives/lwjgl-binaries</outputDirectory>
    </fileSet>


  </fileSets>


</assembly>
